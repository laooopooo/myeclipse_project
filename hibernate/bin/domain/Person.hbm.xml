<?xml version="1.0" encoding="GBK"?>
<!-- 指定Hibernate的DTD信息 -->
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
	<class name="Person" table="person_inf">
		<id name="id">
			<generator class="identity"></generator>
		</id>
		<property name="name" length="80"></property>
		<property name="gender"></property>
		<component name="address">
			<property name="detail"></property>
			<property name="zip"></property>
			<property name="country"></property>
		</component>

		<joined-subclass name="Employee">
			<key column="employee_id"></key>
			<property name="title"></property>
			<property name="salary"></property>
			<many-to-one name="manager" column="manager_id"></many-to-one>
			<set name="customers">
				<key column="employee_id"></key>
				<one-to-many class="Customer" />
			</set>

			<joined-subclass name="Manager">
				<key column="manager_id"></key>
				<property name="department"></property>
				<set name="employees">
					<key column="manager_id"></key>
					<one-to-many class="Employee" />
				</set>
			</joined-subclass>
		</joined-subclass>

		<joined-subclass name="Customer">
			<key column="customer_id"></key>
			<property name="comments"></property>
			<many-to-one name="employee" column="employee_id"></many-to-one>
		</joined-subclass>
	</class>
</hibernate-mapping>