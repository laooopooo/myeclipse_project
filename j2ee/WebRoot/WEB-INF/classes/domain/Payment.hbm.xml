<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="domain">
	<class name="Payment" table="payment_inf">
		<cache usage="read-write" />
		<id name="id" column="payment_id" type="integer">
			<generator class="identity"></generator>
		</id>

		<property name="payMonth" column="pay_month" type="string"
			length="50" not-null="true"></property>
		<property name="amount" column="pay_amount" type="double"
			not-null="true"></property>
		<many-to-one name="employee" class="Employee" column="employee_id"
			lazy="false" not-null="true"></many-to-one>
	</class>
</hibernate-mapping>
