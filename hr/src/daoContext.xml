<?xml version="1.0" encoding="GBK"?>
<!-- 指定Spring配置文件的Schema信息 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<!-- 配置DAO组件的模板 -->
	<bean id="daoTemplate" abstract="true" lazy-init="true"
		p:sessionFactory-ref="sessionFactory"/>

	<bean id="employeeDao"
		class="dao.impl.EmployeeDaoHibernate"
		parent="daoTemplate"/>

	<bean id="managerDao"
		class="dao.impl.ManagerDaoHibernate"
		parent="daoTemplate"/>

	<bean id="attendDao"
		class="dao.impl.AttendDaoHibernate"
		parent="daoTemplate"/>

	<bean id="attendTypeDao"
		class="dao.impl.AttendTypeDaoHibernate"
		parent="daoTemplate"/>

	<bean id="appDao"
		class="dao.impl.ApplicationDaoHibernate"
		parent="daoTemplate"/>

	<bean id="checkDao"
		class="dao.impl.CheckBackDaoHibernate"
		parent="daoTemplate"/>

	<bean id="payDao"
		class="dao.impl.PaymentDaoHibernate"
		parent="daoTemplate"/>

</beans>