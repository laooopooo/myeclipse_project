<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="domain">
	<class name="Payment" table="pay_table">
		<!-- 使用只读缓存 -->
		<cache usage="read-only" />

		<!-- id也要写type -->
		<id name="id" type="integer" column="pay_id">
			<generator class="identity"></generator>
		</id>
		<!-- not-null和length -->
		<property name="payMonth" type="string" column="pay_month"
			not-null="true" length="50"></property>
		<property name="amount" type="double" column="pay_amount"
			not-null="true"></property>
			
			<!-- 先有employee再有payment，所以payment的外键不为空 -->
			<!-- 为什么不使用延迟加载，是因为需要用payment获得employee吗？还是employee加载代价不大，而使用频率很高？ -->
			<!-- lazy默认值是false -->
		<many-to-one name="employee" class="Employee" column="emp_id"
			not-null="true" lazy="false"></many-to-one>
	</class>
</hibernate-mapping>
