<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="domain">
	<class name="Attend" table="attend_table">

		<cache usage="read-only" />

		<id name="id" type="integer" column="attend_id">
			<generator class="identity"></generator>
		</id>

		<property name="dutyDay" type="string" column="duty_day"
			not-null="true" length="50"></property>

		<!-- punchTime的类型不是自带的date，而是java.util.Date -->
		<!-- java类的全称限定名等同于hibernate自带的类型 -->
		<!-- 还没有非空约束，为什么？ -->
		<property name="punchTime" type="date" column="punch_time"></property>

		<property name="isCome" type="boolean" column="is_come"
			not-null="true"></property>

		<!-- 有not-null,lazy属性，但是单向1-1为什么没有unique -->
		<many-to-one name="type" class="AttendType" column="type_id"
			unique="true" not-null="true" lazy="false"></many-to-one>

		<!-- 有not-null,lazy属性，没有cascade -->
		<many-to-one name="employee" class="Employee" column="emp_id"
			cascade="all" not-null="true" lazy="false"></many-to-one>

	</class>
</hibernate-mapping>
