<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="domain">
	<class name="Application" table="app_table">
		<cache usage="read-only" />

		<id name="id" type="integer" column="app_id">
			<generator class="identity"></generator>
		</id>

		<property name="reason" type="string" column="app_reason"
			length="50"></property>

		<property name="result" type="boolean" column="app_result"></property>

		<many-to-one name="attend" class="Attend" column="attend_id"
			unique="true" not-null="true" lazy="false"></many-to-one>


		<many-to-one name="type" class="AttendType" column="type_id"
			unique="true" not-null="true" lazy="false"></many-to-one>

		<!-- 外键放在CheckBack中，Application的配置就较简单，只有一个one-to-one -->
		<one-to-one name="check" property-ref="app"></one-to-one>
	</class>
</hibernate-mapping>
