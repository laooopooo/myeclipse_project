<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="domain">
	<class name="Employee" table="emp_table" discriminator-value="1">

		<cache usage="read-only" />

		<id name="id" type="integer" column="emp_id">
			<generator class="identity"></generator>
		</id>

		<discriminator type="int" column="emp_type"></discriminator>

		<property name="name" type="string" column="emp_name"
			not-null="true" length="50"></property>

		<property name="pass" type="string" column="emp_pass" length="50"
			not-null="true"></property>

		<property name="salary" type="double" column="emp_salary"
			not-null="true"></property>

		<many-to-one name="manager" class="Manager" column="mgr_id"
			not-null="true" lazy="false"></many-to-one>

		<set name="attends" inverse="true">
			<key column="emp_id"></key>
			<one-to-many class="Attend" />
		</set>

		<set name="payments" inverse="true">
			<key column="emp_id"></key>
			<one-to-many class="Payment" />
		</set>



		<subclass name="Manager" discriminator-value="2">
			<property name="dept" type="string" column="dept_name"
				length="50"></property>

			<set name="employees" inverse="true">
				<key column="mgr_id"></key>
				<one-to-many class="Employee" />
			</set>

			<set name="checks" inverse="true">
				<key column="mgr_id"></key>
				<one-to-many class="CheckBack" />
			</set>
		</subclass>



	</class>
</hibernate-mapping>
